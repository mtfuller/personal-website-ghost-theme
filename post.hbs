{{!< default}}


<main role='main' class="container">
  {{#post}}

  {{#if primary_tag}}
  <nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
      {{#primary_tag}}
        <li class="breadcrumb-item"><a href="{{url}}">{{name}}</a></li>
      {{/primary_tag}}
      <li class="breadcrumb-item active" aria-current="page">{{title}}</li>
    </ol>
  </nav>
  {{/if}}

  <h1>{{title}}</h1>
  <p><small class="text-muted">{{date format="MMMM DD, YYYY"}}</small></p>

  <div class="section-sm">
    {{#foreach tags}}
      {{^has slug="projects"}}
        <a class="btn btn-grey btn-sm" href="{{url absolute="true"}}" role="button">{{name}}</a>
      {{/has}}
    {{/foreach}}
  </div>


  <img src="{{img_url feature_image}}" class="img-fluid img-post" alt="Responsive image">

  <div class="row">
    <div class="col-lg-12 post-body">
      {{content}}
    </div>
  </div>

  <div class="row section">
    <h2>Comments</h2>
    <div id="disqus_thread"></div>
    <script type='text/javascript' src='http://www.clevermonkeylabs.org/wp-content/plugins/disqus-comment-system/media/js/disqus.js?ver=4.5.12'></script>
  </div>
  {{/post}}
</main>

<script src="{{asset "assets\js\jquery.slim.min.js"}}"></script>
<script src="{{asset "assets\js\popper.js"}}"></script>
<script src="{{asset "assets\js\bootstrap.min.js"}}"></script>
